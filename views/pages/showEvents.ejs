<div class="col-md-6 col-md-offset-3 bg-1">
  <h3>Upcoming Events</h3>
  <table class="table table-hover table-striped table-bordered" id="table1">
     <thead>
       <tr>
         <th>Event Name</th>
         <th>Actions</th>
       </tr>
     </thead>
     <tbody>
        <% for(event of events){ %>
      <tr>
           <td>
             <%=event.name %>
           </td>
           <td>
             <a href="/view/<%=event._id %>" class="btn btn-md btn-info">View</a>
           </td>
       </tr>
      <% }%>


     </tbody>
  </table>
</div>
